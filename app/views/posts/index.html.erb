<h1>Listing Posts</h1>

<div class="row-fluid">

  <div class="span9">

    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover" id="dealers">
      <thead>
        <tr>
          <th>Title</th>
          <th>Excerpt</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= truncate(post.body) %></td>
          <td><%= link_to 'Show', post, :class => 'btn btn-mini btn-primary' %></td>
          <td><%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-mini btn-inverse' %></td>
          <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>